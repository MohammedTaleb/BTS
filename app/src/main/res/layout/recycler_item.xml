<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d4d4d4"
    android:paddingBottom="1dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/studentPic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/driver_one"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/studentPic"
                android:layout_toRightOf="@+id/studentPic"
                android:text="Student Name"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/stdname"
                android:textStyle="bold"
                android:textSize="19dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studendt grade"
                android:layout_below="@+id/stdname"
                android:layout_alignLeft="@+id/stdname"
                android:layout_alignStart="@+id/stdname"
                android:layout_marginTop="3dp"
                android:id="@+id/stdgrade"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_place_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/locationparent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_call_black_24dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:id="@+id/callparent"
                android:layout_alignTop="@+id/locationparent"
                android:layout_toLeftOf="@+id/locationparent"
                android:layout_toStartOf="@+id/locationparent"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parentIdentity"
                android:visibility="gone"
                />







        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>